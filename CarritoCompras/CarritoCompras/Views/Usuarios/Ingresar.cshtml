@model CarritoCompras.Models.Usuario

@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

<h1>Ingresar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Ingresar">
            <div class="text-danger">@ViewBag.ErrorEnLogin</div>
            <div class="form-group text-light">
                <label for="NombreUsuario" class="control-label">Usuario</label>
                <input name="NombreUsuario" class="form-control" />
            </div>
            <div class="form-group text-light">
                @*cambio color letras*@
            <label for="Password" class="control-label">Contraseña</label>
            <input name="Password" type="password" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Ingresar" class="btn btn-primary" />
            <a class="btn btn-success" asp-action="Registrarse">Registrarse</a>

            @*<a class="btn btn-danger font-weight-bold text-dark" asp-action="Index">Volver</a>   BOTN SALIR EN PANTALLA INGRESAR*@

        </div>
    </form>
</div>
</div>