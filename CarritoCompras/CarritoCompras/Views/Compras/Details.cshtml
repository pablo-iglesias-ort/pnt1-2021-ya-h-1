@model CarritoCompras.Models.Compra

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Compra</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha) de Compra
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @{var name = Model.Cliente.Apellido + " " + Model.Cliente.Nombre + " - " + Model.Cliente.DNI; }
            @name
        </dd>


        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Carrito.CarritosItems)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Producto.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                        <td> @Html.DisplayFor(modelItem => item.Producto.PrecioVigente)</td>
                        <td>
                            @{var x = item.Cantidad * item.Producto.PrecioVigente; }
                            @x.ToString()
                        </td>
                    </tr>
                }
             </tbody>
        </table>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sucursal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sucursal.Direccion)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CompraId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
